<odoo>
  <data>
    <!-- explicit list view definition -->

        <record id="hr_contract_inherit" model="ir.ui.view">
            <field name="name">HR Contract inherit for Payroll AZE</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='wage']" position="after">
                        <label for="life_insurance_amount"/>
                        <div class="o_row" name="life_insurance">
                            <field name="life_insurance_amount" nolabel="1"/>
                            <span>/ month</span>
                        </div>
                    </xpath>
                </data>
            </field>
        </record>


  </data>
</odoo>