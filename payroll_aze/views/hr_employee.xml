<odoo>
  <data>
    <!-- explicit list view definition -->

        <record id="hr_employee_inherit_form" model="ir.ui.view">
            <field name="name">HR Employee inherit for Payroll AZE</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <data>
              <xpath expr="//form[1]/sheet[1]/notebook[1]" position="after">
                <field name="work_experience_ids" context="{'default_employee_id': active_id}">
                  <tree string="Employee work experience" editable="top">
                    <field name="employee_id"/>
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="current"/>
                  </tree>
                </field>
              </xpath>
                </data>
            </field>
        </record>


  </data>
</odoo>